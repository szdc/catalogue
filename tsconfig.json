{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "include": ["./typings/**/*", "./src/**/*", "./test/**/*"]
}
